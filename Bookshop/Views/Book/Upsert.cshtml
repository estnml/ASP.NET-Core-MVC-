@model Bookshop.ViewModels.BookVM
@{
    ViewData["Title"] = "Upsert";
    bool IsCreate = Model.Book.Id == 0 ? true : false;
}

<form asp-controller="Book" asp-action="Upsert" method="post" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="row">
        <div class="col-md-8">
            <input type="hidden" asp-for="@Model.Book.Id" hidden />
            <div class="mb-3 row">
                <label asp-for="@Model.Book.Title" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="@Model.Book.Title">
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="@Model.Book.Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea class="form-control" rows="7" asp-for="@Model.Book.Description"></textarea>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="@Model.Book.Price" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" type="number" asp-for="@Model.Book.Price">
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="@Model.Book.NumOfPages" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" type="number" asp-for="@Model.Book.NumOfPages">
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="@Model.Book.Author" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select class="form-select" aria-label="Default select example" asp-for="@Model.Book.AuthorId" asp-items="@Model.AuthorSelectList">
                        <option selected disabled>Select Author</option>
                    </select>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="@Model.Book.Image" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" type="file" accept="image/*" name="files" multiple>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-2"></div>
                <div class="col-10">
                    <div class="row">
                        <div class="col d-grid"><a asp-controller="Book" asp-action="Index" class="btn btn-dark">Back</a></div>
                        <div class="col d-grid">
                            @if (IsCreate)
                            {
                                <button type="submit" class="btn btn-success">Add</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary">Edit</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            @if (Model.Book.Image is not null)
            {
                <img src="@WC.ImagePathBook@Model.Book.Image" class="img-fluid rounded w-100" asp-append-version="true" />
            }
        </div>
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}

